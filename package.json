{
  "name": "@builderbox/framework",
  "version": "1.0.0",
  "description": "This is a Framework to make APIs easily and quickly.",
  "main": "index.js",
  "repository": "git@github.com:ElMijo/builder-box-framework.git",
  "author": "Jerry Anselmi <jerry.anselmi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc ",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write src",
    "test:unit": "jest --runTestsByPath tests/unit/*.test.ts --coverage",
    "test:integration": "jest --runTestsByPath tests/integration/*.test.ts"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "roots": [
      "src",
      "tests"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": ".coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": false
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "globals": {
      "jest": true,
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "rules": {
      "semi": "off",
      "quotes": [
        "error",
        "double"
      ],
      "import/no-extraneous-dependencies": "off"
    },
    "ignorePatterns": [
      "dist",
      "index.js",
      "node_modules",
      "test/jest.setup.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write src",
      "eslint . --ext .ts --fix",
      "prettier --check src "
    ]
  }
}
